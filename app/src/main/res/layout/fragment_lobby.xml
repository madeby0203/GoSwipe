<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">


    <TextView
            android:text="Lobby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/lobby"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp" android:textSize="50sp"
            app:layout_constraintHorizontal_bias="0.498"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="410dp"
            android:layout_height="455dp"
            android:id="@+id/playerList"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
/>
    <Button
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/startButton"
            android:layout_below="@+id/playerList"
            android:layout_centerHorizontal="true"
/>
    <Button
            android:text="settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/settingsButton"
            android:layout_below="@+id/playerList"
            android:layout_toRightOf="@id/startButton"
            android:layout_marginLeft="20dp"
/>
    <Button
            android:text="cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backButton"
            android:layout_below="@+id/playerList"
            android:layout_toLeftOf="@id/startButton"
            android:layout_marginRight="20dp"
    />



</RelativeLayout>