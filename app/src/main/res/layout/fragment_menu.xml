<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Host"
            android:layout_width="261dp"
            android:layout_height="75dp" android:id="@+id/hostButton"
            app:layout_constraintBottom_toTopOf="@+id/joinButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="28dp"/>
    <Button
            android:text="@string/welcome_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/usernameButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@android:color/black" android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" app:iconGravity="end"
            app:icon="@drawable/ic_baseline_edit_24" app:iconTint="@color/black" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>
    <Button
            android:text="Join"
            android:layout_width="261dp"
            android:layout_height="75dp" android:id="@+id/joinButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="120dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="40sp" android:textAlignment="center"
            android:textColor="@android:color/primary_text_light" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/textView2" app:layout_constraintBottom_toTopOf="@+id/hostButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="temp to results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/toResults" tools:layout_editor_absoluteY="27dp"
            tools:layout_editor_absoluteX="34dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>