<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Host"
            android:layout_width="261dp"
            android:layout_height="75dp" android:id="@+id/hostButton"
            app:layout_constraintBottom_toTopOf="@+id/joinButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="28dp"/>
    <Button
            android:text="Join"
            android:layout_width="261dp"
            android:layout_height="75dp" android:id="@+id/joinButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="120dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/app_name"
            android:layout_width="383dp"
            android:layout_height="65dp"
            android:fontFamily="sans-serif"
            android:textSize="40sp" android:textAlignment="center"
            android:textColor="@android:color/primary_text_light" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/textView2" app:layout_constraintBottom_toTopOf="@+id/hostButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>